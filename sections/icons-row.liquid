{% comment %} Icons row {% endcomment %}

{% assign background = section.settings.color_icons_bg %}
{% assign color = section.settings.color_icons_text %}
{% assign icons_num = section.settings.icons_per_row %}

<style>
  [data-section-id="{{ section.id }}"]
  .icons-row--background {
    color: {{ color }};
    background-color: {{ background }};
  }
  .icons-row__item {
    {% if icons_num == 4 %}
    width: 25%;
    {% elsif icons_num == 4 %}
    width: 30%;
    {% endif %}
  }
</style>

{% if section.blocks.size > 0 %}
<div data-section-id="{{ section.id }}" data-section-type="icons-row">
  <div class="icons-row--background">
    <div class="wrapper">
      
      <div class="icons-row-wrapper icons-row__slider">
        {% for block in section.blocks %}
          {% assign title = block.settings.title %}
          {% assign content = block.settings.content %}
          {% assign icon = block.settings.icon | handleize %}

          <div class="icons-row__item" {{ block.shopify_attributes }}>
            {% if icon != blank %}
            <span class="icons-row__icon oi" data-glyph="{{ icon }}" aria-hidden="true"></span>
            {% endif %}

            {% if title != blank %}
            <h3 class="icons-row__title">{{ title }}</h3>
            {% endif %}

            {% if content != blank %}
            <p class="icons-row__content">{{ content }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Icons row",
  "max_blocks": 6,
  "class": "icons-row",
  "settings": [
    {
      "type": "color",
      "id": "color_icons_bg",
      "label": "Background color",
      "default": "#fafafa"
    },
    {
      "type": "color",
      "id": "color_icons_text",
      "label": "Text color",
      "default": "#333"
    },
    {
      "type": "range",
      "id": "icons_per_row",
      "min": 3,
      "max": 5,
      "step": 1,
      "unit": " el",
      "label": "Icons per row",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "home",
          "info": "[Click here](https://useiconic.com/open/) to view the list of available icons. Example: home"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Modular is a powerful Shopify theme that will set you apart from the rest with Mosaic, Gallery, and Slideshow sections."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons row",
      "category": "Text",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}